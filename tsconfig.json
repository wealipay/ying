{
  "compilerOptions": {
    "target": "es2021",
    "useDefineForClassFields": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "declaration": false,
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
  ],
  "exclude": ["node_modules"]
}
